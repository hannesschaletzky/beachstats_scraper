{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "c": ["/controllers"] // This mapping is relative to "baseUrl"
    },
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.test.ts",
    "./jest.config.ts",
    "./build",
    "./migrations",
    "./setup",
    "./.github",
    "./pm2"
  ]
}
